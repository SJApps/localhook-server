source 'https://rubygems.org'

gem 'cramp'

# Async webserver for running a cramp application
gem 'thin'

# Rack based routing
gem 'http_router'

# Collection of async-proof rack middlewares - https://github.com/rkh/async-rack.git
gem 'async-rack'

# Redis Client
gem "em-hiredis"

# Streaming JSON parsing and encoding library
gem 'yajl-ruby', :require => 'yajl'

# Config file
gem 'settingslogic'

# Process management
gem 'foreman'

group :development do
  # Debugging
  gem 'pry'
end

group :test do
  gem 'rspec'
end
